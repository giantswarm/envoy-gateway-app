+apiVersion: monitoring.coreos.com/v1
+kind: ServiceMonitor
+metadata:
+  name: envoy-gateway
+  namespace: {{ .Release.Namespace }}
+  labels:
+    {{- include "eg.labels" . | nindent 4 }}
